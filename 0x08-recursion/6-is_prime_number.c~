#include "main.h"

/**
 * is_prime_number - checks if the input integer is a prime number
 * @n: integer
 * Return: an int
 **/

int is_prime_number(int n)
{
	if (n % 2 == 0 && n % 3 == 0 && n % 5 == 0 && n % 7 == 0)
		return (0);
	else if (n % 11 == 0 && n % 13 == 0 && n % 17 == 0)
		return (0);
	else
		return (1);
}
